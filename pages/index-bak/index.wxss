/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.flexBorderView {
  display: flex;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0px 0px 10px #dddddd;
  width: 90%;
  border: #ffffff;
  align-items: center;
  margin-top: 10px;
  box-sizing: border-box;
  justify-content: space-between;
  flex-direction: column;
  align-items: flex-start;
}

.borderView {
  display: flex;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0px 0px 10px #dddddd;
  width: 90%;
  height: 100px;
  border: #ffffff;
  align-items: center;
  margin-top: 10px;
  box-sizing: border-box;
  justify-content: space-between;
  flex-direction: column;
  align-items: flex-start;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.longText {
  overflow: hidden;
  max-width: 80%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 9;
  word-break: break-all;
}

.usermotto {
  margin-top: 200px;
}

.flexItem {
  flex-direction: row;
}